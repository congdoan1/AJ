<?xml version="1.0" encoding="UTF-8"?>
<web-app version="2.5" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">
    <listener>
        <description>RequestAttributeListener</description>
        <listener-class>sample.listener.MyRequestAttributeListener</listener-class>
    </listener>
    <listener>
        <description>RequestListener</description>
        <listener-class>sample.listener.MyRequestListener</listener-class>
    </listener>
    <listener>
        <description>ServletContextListener</description>
        <listener-class>sample.listener.MyContextListener</listener-class>
    </listener>
    <listener>
        <description>HttpSessionListener</description>
        <listener-class>sample.listener.MySessionListener</listener-class>
    </listener>
    <servlet>
        <servlet-name>MChoiceServlet</servlet-name>
        <servlet-class>sample.servlet.MChoiceServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>sample.servlet.LoginServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ColorServlet</servlet-name>
        <servlet-class>sample.servlet.ColorServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ProductServlet</servlet-name>
        <servlet-class>sample.servlet.ProductServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>SearchServlet</servlet-name>
        <servlet-class>sample.servlet.SearchServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CenterServlet</servlet-name>
        <servlet-class>sample.servlet.CenterServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ShowSearchServlet</servlet-name>
        <servlet-class>sample.servlet.ShowSearchServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>RequestListenerServlet</servlet-name>
        <servlet-class>sample.servlet.RequestListenerServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>SessionListenerServlet</servlet-name>
        <servlet-class>sample.servlet.SessionListenerServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>MChoiceServlet</servlet-name>
        <url-pattern>/MChoiceServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/LoginServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ColorServlet</servlet-name>
        <url-pattern>/ColorServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ProductServlet</servlet-name>
        <url-pattern>/ProductServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>SearchServlet</servlet-name>
        <url-pattern>/SearchServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CenterServlet</servlet-name>
        <url-pattern>/CenterServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ShowSearchServlet</servlet-name>
        <url-pattern>/ShowSearchServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>RequestListenerServlet</servlet-name>
        <url-pattern>/RequestListenerServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>SessionListenerServlet</servlet-name>
        <url-pattern>/SessionListenerServlet</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>login.html</welcome-file>
    </welcome-file-list>
</web-app>
