<?xml version="1.0" encoding="UTF-8"?>
<web-app version="2.5" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">
    <servlet>
        <servlet-name>DigestServlet</servlet-name>
        <servlet-class>sample.servlet.DigestServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>DigestServlet</servlet-name>
        <url-pattern>/DigestServlet</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>index.html</welcome-file>
    </welcome-file-list>
    <error-page>
        <error-code>401</error-code>
        <location>/invalid.html</location>
    </error-page>
    <error-page>
        <error-code>403</error-code>
        <location>/notPermission.html</location>
    </error-page>
    <security-constraint>
        <display-name>ConstraintDigest</display-name>
        <web-resource-collection>
            <web-resource-name>DigestSecurity</web-resource-name>
            <description/>
            <url-pattern>/DigestServlet</url-pattern>
        </web-resource-collection>
    </security-constraint>
    <login-config>
        <auth-method>DIGEST</auth-method>
    </login-config>
</web-app>
